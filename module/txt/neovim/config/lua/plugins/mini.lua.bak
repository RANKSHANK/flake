local function sub_plug(plug, settings)
    table.insert(settings, "echasnovski/mini." .. plug)
    settings.dir = require("lazy-nix-helper").get_plugin_path("mini.nvim")
    settings.config = function ()
        require("mini." .. plug).setup(settings.opts)
    end
    return settings
end

return {
    sub_plug("ai", {}),
    sub_plug("bufremove", {}),
    sub_plug("comment", {
        lazy = true,
        keys = { "gc", "gcc" },
    }),
    sub_plug("map", { lazy = false, }),
    sub_plug("splitjoin", {}),
    sub_plug("surround", {
        opts = {
            n_lines = 100,
        }
    }),
}
